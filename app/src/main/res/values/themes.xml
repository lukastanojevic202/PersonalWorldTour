<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="PersonalWorldTour" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="colorControlNormal">@color/textIcons</item>
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorOnSecondary">@color/lightPrimaryColor</item>
        <item name="android:windowBackground">@color/lightFragmentBcgColor</item>
    </style>
    <style name="PersonalWorldTourMain" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorOnSecondary">@color/lightPrimaryColor</item>
        <item name="android:windowBackground">@color/lightFragmentBcgColor</item>
    </style>
    <style name = "ToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/darkPrimaryColor</item>

    </style>
    <style name="TabLayoutTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="tabBackground">@color/darkPrimaryColor</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="tabIndicatorColor">@color/teal_200</item>
    </style>

    <style name="usernameInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="counterEnabled">false</item>
        <item name="counterMaxLength">50</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">#FF0000</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="startIconDrawable">@drawable/ic_person_black</item>
    </style>
    <style name="materialInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="counterEnabled">false</item>
        <item name="counterMaxLength">50</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">#FF0000</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">70dp</item>

    </style>
    <style name="passwordInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="helperTextTextColor">#FF0000</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="android:inputType">textPassword</item>

        <item name="startIconDrawable">@drawable/ic_lock_black</item>
        <item name="endIconMode">password_toggle</item>
    </style>
    <style name="textButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textIcons</item>

    </style>
    <style name="Theme_Dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


</resources>