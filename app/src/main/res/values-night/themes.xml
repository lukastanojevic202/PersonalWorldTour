<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="PersonalWorldTour" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:textColor">@color/NightTextIcons</item>
        <item name="android:statusBarColor">@color/NightPrimaryColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/NightFragmentBcgColor</item>
        <item name="android:textColorHint">@color/NightTextIcons</item>
        <item name="colorAccent">@color/NightTextIcons</item>
    </style>

    <style name = "ToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/NightPrimaryColor</item>

    </style>
    <style name="TabLayoutTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="tabBackground">@color/NightPrimaryColor</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="tabSelectedTextColor">@color/teal_200</item>
    </style>


    <style name="usernameInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="counterEnabled">false</item>
        <item name="counterMaxLength">50</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">#FF0000</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="android:textColorHint">@color/NightTextIcons</item>
        <item name="startIconDrawable">@drawable/ic_person_white</item>
    </style>
    <style name="materialInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="counterEnabled">false</item>
        <item name="counterMaxLength">50</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">#FF0000</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:textColorHint">@color/NightTextIcons</item>
        <item name="android:layout_marginEnd">70dp</item>

    </style>
    <style name="passwordInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="helperTextTextColor">#FF0000</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="android:textColorHint">@color/NightTextIcons</item>
        <item name="android:inputType">textPassword</item>

        <item name="startIconDrawable">@drawable/ic_lock_white</item>
        <item name="endIconMode">password_toggle</item>
    </style>
    <style name="textButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/NightTextIcons</item>
    </style>
    <style name="Theme_Dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="ArticleStyle" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>


        <item name="android:textColor">@color/NightTextIcons</item>
        <item name="android:statusBarColor">@color/NightPrimaryColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/NightFragmentBcgColor</item>
        <item name="android:textColorHint">@color/NightTextIcons</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

</resources>